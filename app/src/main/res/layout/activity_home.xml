<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/hometable"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

    <TableRow>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/nsw"/>

        <Button
            android:text="@string/nsw_sydney"
            android:tag="SYDNEY"
            android:onClick="buttonClick"
            style="@style/Theme.Weather.HomeScreenButton"/>

        <Button
            android:text="@string/nsw_all"
            android:tag="NSWALL"
            android:onClick="buttonClick"
            style="@style/Theme.Weather.HomeScreenButton"/>

        <Button
            android:text="@string/nsw_coastal"
            android:tag="NSWCOAST"
            android:onClick="buttonClick"
            style="@style/Theme.Weather.HomeScreenButton"/>
    </TableRow>

    <TableRow>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/vic"/>

        <Button
            android:text="@string/vic_melbourne"
            android:tag="MELBOURNE"
            android:onClick="buttonClick"
            style="@style/Theme.Weather.HomeScreenButton"/>

        <Button
            android:text="@string/vic_all"
            android:tag="VICALL"
            android:onClick="buttonClick"
            style="@style/Theme.Weather.HomeScreenButton"/>

        <Button
            android:text="@string/vic_coastal"
            android:tag="VICCOAST"
            android:onClick="buttonClick"
            style="@style/Theme.Weather.HomeScreenButton"/>
    </TableRow>

</TableLayout>

